<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_700</item>
    </style>

    <style name="Widget.AppTheme.FavoriteCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@color/favorite_checkbox_tint</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/iconButtonMinSize</item>
        <item name="android:minHeight">@dimen/iconButtonMinSize</item>
    </style>

    <style name="Widget.AppTheme.Viewing" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/iconButtonMinSize</item>
        <item name="android:minHeight">@dimen/iconButtonMinSize</item>
        <item name="android:colorBackground">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/favorite_checkbox_tint</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
</resources>